<Window x:Class="TechDevice.Wattmeter.Views.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechDevice.Wattmeter.Views"
        mc:Ignorable="d" 
        Title="Подключение" Height="200" Width="300" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" x:Name="urlTextBlock" Width="200" FontSize="10"/>
        <Button Grid.Row="1" x:Name="connectionButton" 
                Click="connectionButton_Click" Content="Подключиться" />
    </Grid>
</Window>
